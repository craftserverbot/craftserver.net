---
import embed from "../assets/CraftServerEmbed.png";
import explaination from "../assets/CraftServerExplanation.png";

import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import { INVITE_LINK } from "../constants";
import Hero from "../components/Hero.astro";
import Highlight from "../components/Highlight.astro";
import Embed from "../components/Embed.astro";
---

<Layout title="CraftServer Discord Bot">
    <div class="text-white">
        <Hero background="primary">
            {/* Title and bot tag */}
            <h1 class="flex justify-center gap-2 lg:gap-4">
                <span class="text-4xl lg:text-5xl font-title">CraftServer</span>
                <span
                    class="bg-blue-600 px-2 py-1 text-sm lg:text-lg rounded-md lg:rounded-lg self-center translate-y-1"
                    aria-hidden="true">
                    BOT
                </span>
            </h1>
            {/* Embed */}
            <Embed>
                View live information about your favorite
                <Highlight class="bg-green-600 text-white">
                    Minecraft:&nbsp;Java&nbsp;Edition
                </Highlight>
                servers, right from
                <Highlight class="bg-discord text-white">Discord.</Highlight>
            </Embed>
            {/* Button links */}
            <a
                href={INVITE_LINK}
                class="self-center bg-neutral-100 text-black border-2 border-transparent hover:border-gradient shadow font-title p-3 rounded-lg transition-colors">
                Add to your server
            </a>
        </Hero>
    </div>
    <main class="flex flex-col pb-16 bg-secondary">
        <h2 class="uppercase font-title text-2xl text-center m-6">Features</h2>
        <div
            class="bg-discord text-white p-4 self-center max-w-md mx-4 rounded-xl overflow-hidden min-h-[250px] relative flex items-center mb-4 shadow-lg">
            <Image
                src={embed}
                alt="Discord embed showing the response to the view command"
                width={300}
                class="absolute object-none right-0 top-1/2 -translate-y-1/2 translate-x-[150px] sm:translate-x-[125px]"
            />
            <div class="w-[calc(100%-150px)] sm:w-[calc(100%-200px)] text-xl">
                CraftServer's <strong>/view</strong> command makes it easy to get
                instant information about a server's online status, how many people
                are playing, and more.
            </div>
        </div>
        <h2 class="uppercase font-title text-2xl text-center m-6">
            Information-rich
        </h2>
        <Image
            src={explaination}
            width={512}
            alt={[
                "View info about your server without starting up Minecraft.",
                "Easily check if your server is online.",
                "See how many others are playing.",
                "Let people know what version to play on.",
            ].join(" ")}
            class="self-center rounded-xl mb-4 shadow-lg max-w-xs sm:max-w-full"
        />
    </main>
</Layout>
