---
import logo from "../assets/logo.png";

import { Image } from "@astrojs/image/components";
import NavbarLinkMenu from "./navbar/NavbarLinkMenu.astro";

export interface Props {
    links: Record<string, string>;
}

const { links } = Astro.props;
---

<nav
    class="bg-primary/80 text-white flex items-center justify-between p-4 w-full sticky top-0 z-20 backdrop-blur">
    <a href="/" class="group">
        <Image
            src={logo}
            alt="CraftServer logo"
            width={70}
            aspectRatio={1 / 1}
            class="rounded-[100%] group-hover:rounded-3xl min-w-[70px] cursor-pointer"
        />
    </a>
    <NavbarLinkMenu links={links} />
</nav>
