---
import Image from "./Image.astro";
import logo from "../assets/logo.png";

export interface Props {
    small?: boolean;
}

const { small = false } = Astro.props;
---

<Image
    src={logo}
    alt="CraftServer logo"
    width={50 * 2}
    aspectRatio={1 / 1}
    class={`rounded-[100%] ${small ? "w-[34px]" : "w-[50px]"} cursor-pointer`}
/>
