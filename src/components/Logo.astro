---
import Image from "./Image.astro";
import logo from "../assets/logo.png";

export interface Props {
    listenForHover?: boolean;
    small?: boolean;
}

const { listenForHover = false, small = false } = Astro.props;
---

<Image
    src={logo}
    alt="CraftServer logo"
    width={70 * 2}
    aspectRatio={1 / 1}
    class={`rounded-[100%] ${listenForHover ? "group-hover:rounded-3xl" : ""} ${
        small ? "w-[34px]" : "w-[70px]"
    } cursor-pointer border border-white shadow`}
/>
